#!/usr/bin/env bash
# Configuration d'un serveur Ubuntu pour :
# localhost résout vers 127.0.0.2
# facebook.com résout vers 8.8.8.8

# printf = plus portable que echo
# > /etc/hosts = redirection complète (écrase le fichier)
printf "127.0.0.1\tubuntu\n127.0.0.2\tlocalhost\n8.8.8.8\tfacebook.com\n" > /etc/hosts
