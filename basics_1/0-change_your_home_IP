#!/usr/bin/env bash
# Configuration d'un serveur Ubuntu pour :
# localhost résout vers 127.0.0.2
# facebook.com résout vers 8.8.8.8

# Copier /etc/hosts vers un fichier temporaire
cp /etc/hosts ~/temp

# Remplacer 127.0.0.1 par 127.0.0.2 dans le fichier temporaire
sed -i s/127.0.0.1/127.0.0.2/ ~/temp

# Ajouter l'entrée facebook.com
echo "8.8.8.8 facebook.com" >> ~/temp

# Remplacer le fichier /etc/hosts par le fichier temporaire modifié
cp -f ~/temp /etc/hosts
